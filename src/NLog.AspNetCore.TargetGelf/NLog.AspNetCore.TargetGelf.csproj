<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Copyright>Copyright 2018</Copyright>
    <Description>NLog.AspNetCore.TargetGelf for GrayLog</Description>
    <PackageLicenseUrl>https://github.com/mparlak/NLog.AspNetCore.TargetGelf</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mparlak/NLog.AspNetCore.TargetGelf</PackageProjectUrl>
    <PackageIconUrl>https://github.com/mparlak/NLog.AspNetCore.TargetGelf</PackageIconUrl>
    <RepositoryUrl>https://github.com/mparlak/NLog.AspNetCore.TargetGelf</RepositoryUrl>
    <PackageTags>gelf,graylog,nlog</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="NLog.Extensions.Logging" Version="1.3.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0" />
  </ItemGroup>

</Project>
